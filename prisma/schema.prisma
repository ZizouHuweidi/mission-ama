generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum PURPOSE {
  audit
  visit
  inspection
  client
}

enum DEPARTMENT {
  financial
  commercial
  construction
  HR
  DG
  quality
  achat
}

enum TRANSPORT {
  car
  bus
  train
  taxi
  flight
}

// enum OCCUPATION {
//   something
//   something2
// }

model Mission {
  id           Int       @id @default(autoincrement())
  createdAt    DateTime  @default(now())
  startDate    DateTime
  endDate      DateTime
  employee     Employee  @relation(fields: [employeeId], references: [id])
  employeeId   Int
  participants String[]
  project      Project?  @relation(fields: [projectId], references: [id])
  projectId    Int?
  destination  String
  purpose      PURPOSE
  transport    TRANSPORT
  fuel         Int?
  external     Boolean   @default(false)
  visa         Int?
  vaccination  Int?
  tests        Int?
  timbre       Int?
  other_costs  Int?
  // cost         Int
}

model Employee {
  id           Int        @id @default(autoincrement())
  name         String
  phone        Int
  // occupation   OCCUPATION
  CSP          Boolean    @default(true)
  email        String     @unique
  password     String
  Missions     Mission[]
  department   DEPARTMENT
  // admin     Boolean 
  supervisorId Int?
  supervisor   Employee?  @relation("supervisorEmployee", fields: [supervisorId], references: [id])
  supervisee   Employee[] @relation("supervisorEmployee")
  projects     Project[]
}

model Project {
  id          Int        @id @default(autoincrement())
  name        String
  description String
  Missions    Mission[]
  employees   Employee[]
}
