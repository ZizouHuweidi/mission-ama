// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Mission {
  id           Int      @id @default(autoincrement())
  createdAt    DateTime @default(now())
  startDate    DateTime
  endDate      DateTime
  employee     Employee @relation(fields: [employeeId], references: [id])
  employeeId   Int
  participants String[]
  project      Project? @relation(fields: [projectId], references: [id])
  projectId    Int?
  destination  String
  purpose      String?
  transport    String?
  fuel         Int?
  external     Boolean  @default(false)
  visa         Int?
  vaccination  Int?
  tests        Int?
  timbre       Int?
  other_costs  Int?
}

model Employee {
  id           Int        @id @default(autoincrement())
  name         String
  phone        Int
  occupation   String?
  CSP          Boolean    @default(true)
  email        String     @unique
  password     String
  Missions     Mission[]
  department   String
  supervisorId Int?
  supervisor   Employee?  @relation("supervisorEmployee", fields: [supervisorId], references: [id])
  supervisee   Employee[] @relation("supervisorEmployee")
  projects     Project[]
}

model Project {
  id          Int        @id @default(autoincrement())
  name        String
  description String
  Missions    Mission[]
  employees   Employee[]
}
